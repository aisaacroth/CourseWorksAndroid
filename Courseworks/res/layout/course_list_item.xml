<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/course_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/announcement_blue"
        android:textSize="14sp"
        android:text="Class Name" />
    
    <LinearLayout
        android:id="@+id/course_item_subtext_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/course_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" 
            android:text="COMSW1004" />
        
        <TextView
            android:id="@+id/course_item_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" 
            android:text="Adam Cannon" />
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/course_item_subtext_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/course_item_meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp" 
            android:text="M, W, 11:40-12:55"/>
        
        <TextView 
            android:id="@+id/course_item_meeting_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="301 NorthWest"/>
    </LinearLayout>
    

</LinearLayout>
