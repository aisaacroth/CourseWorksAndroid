<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aisaacroth.courseworks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- AnnouncementView Activity -->
        <activity
            android:name="com.aisaacroth.courseworks.views.AnnouncementView"
            android:label="@string/title_activity_announcement_view" >
        </activity>

        <!-- CalendarView Activity -->
        <activity
            android:name="com.aisaacroth.courseworks.views.CalendarView"
            android:label="@string/title_activity_calendar_view" >
        </activity>

        <!-- CourseView Activity -->
        <!--
        <activity
            android:name="com.aisaacroth.courseworks.views.CourseView"
            android:label="@string/title_activity_course_view" >
        </activity>
        -->


        <!-- Implicit Grant activity -->
        <activity
            android:name="com.aisaacroth.courseworks.auth.ImplicitGrant"
            android:label="@string/app_name" >
        </activity>

        <!-- Login activity -->
        <activity
            android:name="com.aisaacroth.courseworks.views.Login"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <!-- Main activity -->
        <activity
            android:name="com.aisaacroth.courseworks.views.Main"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.aisaacroth.courseworks.SearchResultsActivity" />
        </activity>

        <!-- Settings activity -->
        <activity
            android:name="com.aisaacroth.courseworks.views.Settings"
            android:label="@string/title_activity_settings" >
        </activity>

        <!-- Splash Screen -->
        <activity
            android:name="com.aisaacroth.courseworks.views.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>