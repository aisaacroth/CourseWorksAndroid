<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.columbia.cuit.courseworks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme" >

        <!-- AnnouncementView Activity -->
        <activity
            android:name="edu.columbia.cuit.courseworks.views.AnnouncementView"
            android:label="@string/title_activity_announcement_view"
            android:theme="@style/AppTheme">
        </activity>

        <!-- CourseListHolderView -->
        <activity
            android:name="edu.columbia.cuit.courseworks.views.CourseListHolderView"
            android:label="@string/title_activity_course_view"
            android:theme="@style/ActionBarMain" >
        </activity>

        <!-- Login activity -->
        <activity
            android:name="edu.columbia.cuit.courseworks.views.LoginView"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <!-- Main activity -->
        <activity
            android:name="edu.columbia.cuit.courseworks.views.Main"
            android:label="@string/app_name"
            android:theme="@style/ActionBarMain" >
        </activity>

        <!-- Splash Screen -->
        <activity
            android:name="edu.columbia.cuit.courseworks.views.SplashView"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Expiration Timer Service -->
        <service android:name="edu.columbia.cuit.courseworks.utils.ExpirationTimer" >
        </service>

        <!-- HiddenWebView -->
        <activity
            android:name="edu.columbia.cuit.courseworks.views.HiddenWebView"
            android:label="@string/title_activity_hidden_web_view"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="edu.columbia.cuit.courseworks.views.CourseView"
            android:label="@string/title_activity_course_view" >
        </activity>
        <activity
            android:name="edu.columbia.cuit.courseworks.CoursePlaceHolderView"
            android:label="@string/title_activity_course_place_holder_view" >
        </activity>
        <activity
            android:name="edu.columbia.cuit.courseworks.PastCourseListView"
            android:label="@string/title_activity_past_course_list_view" >
        </activity>
        <activity
            android:name="edu.columbia.cuit.courseworks.views.CourseListView"
            android:label="@string/title_activity_current_course_list_view" >
        </activity>
        <activity
            android:name="edu.columbia.cuit.courseworks.NextCourseListView"
            android:label="@string/title_activity_next_course_list_view" >
        </activity>
    </application>

</manifest>
